<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sakib23arko.shareandlearn.profileDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Information"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:text="Display Name :"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/displayNameId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="15dp"
            android:textSize="12sp"

            android:hint="Type Something Here"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:text="University Name :"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/universityNameId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="15dp"
            android:textSize="12sp"

            android:hint="Type Something Here"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:text="Email :"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/displayEmailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="15dp"
            android:textSize="12sp"

            android:hint="Type Something Here"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:text="Interested Topics :"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/selectTopicsId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textAllCaps="false"
            android:text="Click here to select"
            android:textColor="#1e69e2"/>

        <Button
            android:id="@+id/profileDetailSaveId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#0a0250"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:text="Save"
            android:textColor="#f9faf8"/>


    </LinearLayout>

</ScrollView>
